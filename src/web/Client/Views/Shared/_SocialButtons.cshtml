@{
    string currentUrl = HttpContext.Current.Request.Url.AbsoluteUri;
}

<ul>
    <!--Facebook-->
    @* Replace with your URL. For best results, make sure you page has the proper FB Open Graph tags in header:
        https://developers.facebook.com/docs/opengraph/howtos/maximizing-distribution-media-content/ -->
    *@


    <li>
        <a href="https://www.facebook.com/sharer/sharer.php?u=@currentUrl&amp;t=@(ViewBag.Title)" class="popup social-fb social-btn" target="_top">
            <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                 viewBox="0 0 486.392 486.392" fill="#EB65A0" width="32px" height="32px" style="enable-background:new 0 0 486.392 486.392;" xml:space="preserve">
            <use xlink:href="~/client/content/v1/images/svg/sprites.svg#icon-fb"></use>
</svg>
        </a>
    </li>
    <!--google+-->
    <li>
        <a href="https://plus.google.com/share?url=@(currentUrl)" class="popup social-gp social-btn" target="_top">
            <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                 width="32px" height="32px" viewBox="0 0 612 612" fill="#EB65A0" style="enable-background:new 0 0 612 612;" xml:space="preserve">
            <use xlink:href="~/client/content/v1/images/svg/sprites.svg#icon-gp"></use>
</svg>
        </a>
    </li>
    <!--linkdin-->
    <li>
        <a href="http://www.linkedin.com/shareArticle?mini=true&amp;url=@(currentUrl)&amp;title=@(ViewBag.Title)" class="popup social-ln social-btn" target="_top">
            <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="32px" height="32px" viewBox="0 0 486.392 486.392" style="enable-background:new 0 0 486.392 486.392;" xml:space="preserve" fill="#EB65A0">
            <use xlink:href="~/client/content/v1/images/svg/sprites.svg#icon-ln"></use>
</svg>
        </a>
    </li>
    <!--Twitter-->
    <li>
        <a href="https://twitter.com/intent/tweet?text=@(currentUrl)" target="_top" class="popup social-tw social-btn">
            <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                 width="32px" height="32px" fill="#EB65A0" viewBox="0 0 49.652 49.652" style="enable-background:new 0 0 49.652 49.652;"
                 xml:space="preserve">
            <use xlink:href="~/client/content/v1/images/svg/sprites.svg#icon-tw"></use>
</svg>
        </a>
    </li>

</ul>